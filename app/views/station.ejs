<%- include('header', {title: 'Station', leaflet: false, css: [], js: [], banner: false}); -%>

<div class="row">
    <div class="col s12 m3">
        <div class="hoverable card">
            <div class="card-image">
                <img src="/img/station.png">
                <span class="black-white card-title">La station</span>
            </div>
            <div class="card-content">
                <label for="station-borne-number">Nombre de bornes :</label>
                <p id="station-borne-number"><%= station.NOMBRE_BORNES_STATION %></p>
                <label for="station-adresse">Adresse :</label>
                <p id="station-adresse"><%= station.ADRESSE_STATION %></p>
            </div>
            <!-- <div class="card-action">
            <a href="#">This is a link</a>
        </div> -->
        </div>
    </div>
    <div class="col s12 m9">
        <h2>Les vélos dans cette station :</h2>
        <table id="bike-list" class="centered highlight responsive-table">
            <thead class="red accent-1">
                <tr>
                    <th colspan="1">Marque</th>
                    <th colspan="1">Référence</th>
                    <th colspan="1">Date de mise en service</th>
                    <th colspan="1">Kilométrage</th>
                    <th colspan="1">Etat</th>
                    <th colspan="1">Batterie</th>
                </tr>
            </thead>
            <tbody>
                <% bikes.forEach(bike => { %>
                <tr class="bike" onclick="window.location.assign('/bike/<%= bike.ID_VELO %>')">
                    <td><%= bike.MARQUE_VELO %></td>
                    <td><%= bike.REFERENCE_VELO %></td>
                    <td><%= new Date(bike.DATE_SERVICE_VELO).toLocaleDateString() %></td>
                    <td><%= bike.KM_VELO %></td>
                    <td><%= bike.ETAT_VELO %></td>
                    <td><%= bike.BATTERIE_VELO %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>

<%- include('footer'); -%>
