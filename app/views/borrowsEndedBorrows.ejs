<%- include('header', {title: 'Emprunts', leaflet: false, css: [], js: [], banner: false}); -%>

<div class="row">
    <div class="col s12">
        <h1>Les emprunts réalisés et terminés depuis notre création</h1>
    </div>
</div>

<div class="row  valign-wrapper">
    <div class="col s4">
        <a class="waves-effect waves-light btn" href="/borrows/allBorrows">Filtrer tous les emprunts</a>
    </div>
    <div class="col s4">
        <a class="waves-effect waves-light btn" href="/borrows/list">Filtrer les emprunts en cours</a>
    </div>
    <div class="col s4">
        <a class="waves-effect waves-light btn" href="/borrow">Emprunter un vélo</a>
    </div>
</div>

<div class="row">
    <table class="centered highlight responsive-table">
        <thead class="red accent-1">
            <tr>
                <th colspan="1">Numéro d'emprunt</th>
                <th colspan="1">Nom adhérent</th>
                <th colspan="1">Vélo</th>
                <th colspan="1">Station d'emprunt</th>
                <th colspan="1">Date d'emprunt</th>
                <th colspan="1">Heure d'emprunt</th>
                <th colspan="1">Station de rendu</th>
                <th colspan="1">Date de rendu</th>
                <th colspan="1">Heure de rendu</th>
                <th colspan="1">km parcourus</th>
            </tr>
        </thead>
        <tbody>
            <% borrows.forEach(borrow => { %>
            <tr>
                <td><%= borrow.ID_EMPRUNT %></td>
                <td><%= borrow.NOM_COMPLET_ADHERENT %></td>
                <td><%= borrow.ID_VELO %></td>
                <td><%= borrow.ADDR1 %></td>
                <td><%= new Date(borrow.DATE_DEBUT_EMPRUNT).toLocaleDateString() %></td>
                <td><%= borrow.HEURE_DEBUT_EMPRUNT %></td>
                <td><%= borrow.ADDR2 %></td>
                <td><%= new Date(borrow.DATE_FIN_EMPRUNT).toLocaleDateString() %></td>
                <td><%= borrow.HEURE_DEBUT_EMPRUNT %></td>
                <td><%= borrow.KM_PARCOURUS %></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('footer'); -%>